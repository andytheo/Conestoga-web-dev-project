        <section class="form-section">
            <h1>Create Post</h1>
            <form action="/create-post" method="post" enctype="multipart/form-data">
                <label for="title">Title </label>
                <input class="class-form" type="text" name="title"  id="title">
                <label for="image">Image </label>
                <input class="class-form" type="file" name="image"  id="image">
                <label for="content">Content</label><br>
                <textarea name="content" id="" cols="50" rows="20"></textarea><br><br>              
                <button class="submit-button" type="submit">Post</button>
            </form>
        </section>

